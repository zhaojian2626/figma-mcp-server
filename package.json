{
  "name": "figma-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Figma MCP Server - 将 Figma 自动化工具暴露为 MCP (Model Context Protocol) 服务",
  "main": "server.js",
  "bin": {
    "figma-mcp-server": "./server.js"
  },
  "scripts": {
    "start": "node server.js",
    "start:http": "node server-http.js",
    "dev": "node server-http.js",
    "docker:build": "docker build -t figma-mcp-server .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "axios": "^1.7.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "figma",
    "mcp",
    "model-context-protocol",
    "automation"
  ],
  "author": "",
  "license": "MIT"
}

